@page
@model LoginModel

@{
    ViewData["Title"] = "Влез";
}

<style>
    /* Modern card styling */
    .login-card {
        background-color: #8ee697;
        border-radius: 12px;
        padding: 0.5rem;
        transition: all 0.3s ease;
    }

    .form-control, .form-check-input {
        background-color: #dcf7de;
    }

        .form-control:focus {
            background-color: #dcf7de !important;
            border-color: #0d6efd;
            outline: none;
        }

    /* Form styling */
    .form-floating {
        margin-bottom: 1rem;
    }

        .form-floating > .form-control {
            padding: 1rem 0.75rem;
        }

            .form-floating > .form-control:focus {
                border-color: #0d6efd;
            }

    /* Button styling */
    .btn-primary {
        background-color: blue;
        border-color: blue;
        padding: 0.75rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        border-radius: 6px;
        transition: all 0.2s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
        }

    .text-danger {
        justify-content: center;
        width: 100%;
        color: red;
        text-decoration: none; /* Removes underline */
        font-weight: 600;
        letter-spacing: 0.5px;
        border-radius: 6px;
        transition: all 0.2s ease;
        display: flex;
    }

    .register-link {
        color: blue;
        text-decoration: none; /* Removes underline */
        font-weight: 600;
        letter-spacing: 0.5px;
        border-radius: 6px;
        transition: all 0.2s ease;
        display: inline-block;
    }

        .register-link:hover {
            transform: translateY(-2px);
            text-decoration: none; /* Ensures no underline on hover */
        }
    /* Validation styling */
    .validation-summary-errors {
        text-align: center;
    }

    .login-container {
        min-height: 78vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1rem;
    }

    .validation-summary-errors ul {
        list-style: none;
        padding-left: 0;
        margin: 0;
    }

    /* Responsive container adjustments */
    @@media (max-width: 768px) {
        .login-card {
            padding: 1.5rem;
            width: 100%;
        }
    }

    @@media (max-width: 576px) {
        .login-card {
            padding: 1.25rem;
            width: 100%;
        }

        .btn-primary {
            padding: 0.625rem;
        }
    }

    /* Additional responsive adjustments */
    @@media (max-width: 480px) {
        .login-container {
            min-height: 70vh;
            padding: 0.5rem;
        }

        .login-card {
            padding: 1rem;
            border-radius: 8px;
        }

        h2 {
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

        .form-floating > .form-control {
            padding: 0.75rem 0.5rem;
        }
    }

    @@media (max-width: 320px) {
        .login-card {
            padding: 0.75rem;
        }

        h2 {
            font-size: 1.25rem;
        }

        .btn-primary {
            padding: 0.5rem;
        }
    }

    /* Height-based media queries */
    @@media (max-height: 600px) {
        .login-container {
            min-height: auto;
            padding-top: 1.5rem;
            padding-bottom: 1.5rem;
        }
    }

    /* Tablet landscape adjustments */
    @@media (min-width: 768px) and (max-width: 1024px) and (orientation: landscape) {
        .login-container {
            min-height: 85vh;
        }
    }

    /* Print styles */
    @@media print {
        .login-container {
            min-height: auto;
        }

        .btn-primary {
            background-color: #333 !important;
            border-color: #333 !important;
            color: white !important;
        }
    }
</style>

<div class="container-fluid login-container">
    <div class="row justify-content-center w-100">
        <div class="col-12 col-sm-10 col-md-8 col-lg-5 col-xl-4">
            <div class="login-card">
                <form id="loginForm" method="post">
                    <h2 class="text-center fw-bold">@ViewData["Title"]</h2>
                    <div asp-validation-summary="ModelOnly" class="text-danger m-2 text-center validation-summary-errors" role="alert"></div>

                    <div class="form-floating">
                        <input asp-for="Input.UserNameOrEmail" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com / MyUserName" />
                        <label asp-for="Input.UserNameOrEmail">Потребителско име или имейл</label>
                        <span asp-validation-for="Input.UserNameOrEmail" class="text-danger text-center"></span>
                    </div>

                    <div class="form-floating text-center ">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Парола" />
                        <label asp-for="Input.Password">Парола</label>
                        <span asp-validation-for="Input.Password" class="text-center text-danger"></span>
                        <span class="text-danger text-center">@ViewData["PasswordError"]</span>
                    </div>

                    <div class="d-flex justify-content-center mb-3">
                        <div class="form-check">
                            <input type="checkbox" asp-for="Input.RememberMe" class="form-check-input" />
                            <label asp-for="Input.RememberMe" class="fw-bolder form-check-label ms-2">Запомни ме</label>
                        </div>
                    </div>

                    <button id="loginSubmit" type="submit" class="w-100 btn btn-primary mb-3">Влез</button>

                    <div class="text-center">
                        <a asp-page="./Register" class="register-link">Нямате акаунт? Регистрирайте се</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.querySelectorAll('.form-control').forEach(input => {
            input.addEventListener('focus', function () {
                this.parentElement.classList.add('focused');
            });
            input.addEventListener('blur', function () {
                this.parentElement.classList.remove('focused');
            });
        });
    });
</script>