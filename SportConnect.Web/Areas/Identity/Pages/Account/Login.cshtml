@page
@model LoginModel

@{
    ViewData["Title"] = "Влез";
}

<div class="container-fluid d-flex justify-content-center align-items-center" style="min-height: calc(100vh - 160px);">
    <div class="row justify-content-center w-100">
        <div class="col-12 col-md-8 col-lg-6">
            <form id="loginForm" method="post" class="p-3">
                <h2 class="text-center">@ViewData["Title"]</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <!-- Row 1: Username or Email -->
                <div class="row mb-2">
                    <div class="col-12">
                        <div class="form-floating">
                            <input asp-for="Input.UserNameOrEmail" class="form-control form-control-sm" aria-required="true" placeholder="name@example.com / MyUserName" style="font-size: 1em;" />
                            <label asp-for="Input.UserNameOrEmail">Потребителско име или имейл</label>
                            <span asp-validation-for="Input.UserNameOrEmail" class="text-danger" style="font-size: 1em;"></span>
                        </div>
                    </div>
                </div>

                <!-- Row 2: Password -->
                <div class="row mb-2">
                    <div class="col-12">
                        <div class="form-floating">
                            <input asp-for="Input.Password" class="form-control form-control-sm" aria-required="true" placeholder="Парола" style="font-size: 1em;" />
                            <label asp-for="Input.Password">Парола</label>
                            <span asp-validation-for="Input.Password" class="text-danger" style="font-size: 1em;"></span>
                        </div>
                    </div>
                </div>

                <!-- Row 3: Remember Me (Centered) -->
                <div class="row mb-2 justify-content-center">
                    <div class="col-auto">
                        <div class="form-check d-flex align-items-center">
                            <input asp-for="Input.RememberMe" class="form-check-input" type="checkbox" />
                            <label asp-for="Input.RememberMe" class="form-check-label ms-2" style="font-size: 1em;">Запомни ме</label>
                        </div>
                    </div>
                </div>

                <!-- Submit Button -->
                <button id="loginSubmit" type="submit" class="w-100 btn btn-lg btn-primary mt-3" style="font-size: 1em;">Влез</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
