@if (Model.Tournaments.Count == 0)
{
    <div class="container-fluid d-flex justify-content-center align-items-center" style="height: 75vh;">
        <div class="no-container p-2" style="max-width: 50%; padding: 0.5rem;">
            <h1 class="text-center mb-3" style="font-size: 5rem;">Няма ваши участия</h1>
            <div class="d-flex justify-content-center mt-3">
                <a asp-controller="Tournament" asp-action="AllTournaments" class="btn btn-success text-center" style="font-size: 1rem;">Турнири</a>
            </div>
        </div>
    </div>
}
else
{
    <div class="d-flex flex-column justify-content-center align-items-center">
        <div class="container1" style="width: 1320px; min-height: 530px;">
            <h2 class="page-header text-center">Ваши участия</h2>

            <div class="justify-content-center align-items-center">
                <form method="get" class="d-flex flex-column align-items-center sticky-search">
                    <!-- Row 1: Name, Sport, Organizer -->
                    <div class="d-flex justify-content-center mb-2">
                        <input type="text" asp-for="@Model.Name" class="form-control search-control form-control-sm me-2" placeholder="Име на турнир" style="font-size: 1rem; width: 430px;">
                        <select asp-for="@Model.SportId" asp-items="@ViewBag.Sports" class="form-select search-control form-control-sm me-2" aria-required="true" style="font-size: 1rem; width: 430px;">
                            <option value="" selected>Изберете спорт на турнир</option>
                        </select>
                        <input type="text" asp-for="@Model.OrganizerName" class="form-control search-control form-control-sm" placeholder="Организатор на турнир" style="font-size: 1rem; width: 430px;">
                    </div>

                    <!-- Row 2: Country, Start Date, End Date -->
                    <div class="d-flex justify-content-center mb-2">
                        <select asp-for="@Model.Country" asp-items="@ViewBag.Countries" class="form-select search-control form-control-sm me-2" aria-required="true" style="font-size: 1rem; width: 430px;">
                            <option value="" selected>Изберете страна на турнир</option>
                        </select>
                        <div class="form-floating me-2" style="width: 281.3px;">
                            <input type="date" min="@DateTime.Now.Date" asp-for="@Model.StartDate" class="form-control search-control form-control-sm" id="startDate">
                            <label for="startDate" style="font-size: 0.875rem;">От дата на турнир</label>
                        </div>
                        <div class="form-floating me-2" style="width: 281.3px;">
                            <input type="date" min="@DateTime.Now.Date" asp-for="@Model.EndDate" class="form-control search-control form-control-sm" id="endDate">
                            <label for="endDate" style="font-size: 0.875rem;">До дата на турнир</label>
                        </div>
                        <select asp-for="@Model.Approved" class="search-control form-select form-control-sm" aria-required="true" style="font-size: 1rem; width: 289.3px;">
                            <option value="" selected>Всички</option>
                            <option value="true">Одобрени</option>
                            <option value="false">Неодобрени</option>
                        </select>
                    </div>

                    <!-- Row 3: Buttons -->
                    <div class="d-flex justify-content-around w-100">
                        <a asp-controller="Tournament" asp-action="AllTournaments" class="btn btn-success text-center" style="font-size: 1rem;">Турнири</a>
                        <button type="submit" class="btn btn-primary" style="font-size: 1rem;">Търси</button>
                    </div>
                </form>

                <div class="row justify-content-center mt-2 mb-3">
                    @foreach (var tournament in Model.FilteredTournaments)
                    {
                        <div class="col-md-6 mb-3">
                            <div class="card">
                                <div class="d-flex">
                                    <!-- Image Area -->
                                    @if (!string.IsNullOrEmpty(tournament.ImageUrl))
                                    {
                                        <img src="@tournament.ImageUrl" alt="@tournament.Name" class="card-img-top" style="height: 226px; width: 301px; padding: 0.5rem !important; object-fit: cover;">
                                    }

                                    <!-- Text Area -->
                                    <div class="card-body custom-line-height" style="padding: 0.5rem 0.5rem 0.5rem 0px !important;">
                                        <div class="d-flex flex-column align-items-center justify-content-center">
                                            <h5 class="fw-bolder text-center mb-0">@tournament.Name</h5>
                                            <p class="text-center mb-0">@tournament.Description</p>
                                            <p class="text-center mb-0">@tournament.Country</p>
                                        </div>

                                        <div class="mb-0 d-flex justify-content-between" style="border-bottom: 3px solid #6fd277;">
                                            <strong class="fw-bolder">Спорт:</strong>
                                            <span>@tournament.Sport.Name</span>
                                        </div>

                                        <div class="mb-0 d-flex justify-content-between" style="border-bottom: 3px solid #6fd277;">
                                            <strong class="fw-bolder">Организатор:</strong>
                                            <span>@tournament.Organizer.FullName</span>
                                        </div>

                                        <div class="mb-0 d-flex justify-content-between" style="border-bottom: 3px solid #6fd277;">
                                            <strong class="fw-bolder">Дата:</strong>
                                            <span>@tournament.Date.ToString("dd.MM.yyyy HH:mm")</span>
                                        </div>

                                        <div class="mb-0 d-flex justify-content-between">
                                            <strong class="fw-bolder">Краен срок:</strong>
                                            <span>@tournament.Deadline.ToString("dd.MM.yyyy HH:mm")</span>
                                        </div>
                                    </div>
                                </div>
                                @{
                                    string userId = ViewBag.UserId;
                                    string tournamentid = tournament.Id;
                                }
                                <div class="card-footer text-center">
                                    <div class="d-flex justify-content-between align-items-center gap-2 w-100">
                                        <div id="participationButtons-@tournamentid" class="d-flex justify-content-between align-items-center " style="width: 220px;">
                                            @if (tournament.Participations != null)
                                            {
                                                var userParticipation = tournament.Participations.FirstOrDefault(p => p.ParticipantId == ViewBag.UserId);

                                                if (userParticipation != null)
                                                {
                                                    if (userParticipation.Approved == false)
                                                    {
                                                        <button class="btn btn-secondary text-white btn-sm w-50" onmousedown="return false;" onkeydown="return false;">Неодобрен</button>
                                                        <a id="quitParticipation-@tournamentid" class="btn btn-danger w-50 btn-sm" onclick="replaceWithConfirmation(@tournamentid, false)">Отказване</a>
                                                    }
                                                    else
                                                    {
                                                        <button class="btn btn-success text-white btn-sm w-50" onmousedown="return false;" onkeydown="return false;">Одобрен</button>
                                                        <a id="quitParticipation-@tournamentid" class="btn btn-danger w-50 btn-sm" onclick="replaceWithConfirmation(@tournamentid, true)">Отказване</a>
                                                    }
                                                }
                                            }
                                        </div>
                                        <a asp-controller="Participation" asp-action="TournamentParticipations" asp-route-id="@tournament.Id" asp-route-returnUrl="@Url.Action("MyParticipations", "Participation")" class="btn btn-primary btn-sm" style="width: 110px;">Участници</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}