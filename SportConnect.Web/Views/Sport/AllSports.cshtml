@using SportConnect.Models
@model List<Sport>
@{
    <h1>Всички спортове</h1>

    @if (Model.Count == 0)
    {
        <h2>Няма спортове в системата</h2>
    }
    else
    {
        <table class="table" style="table-layout: fixed; width: 100%;">
            <colgroup>
                <col style="width: 10%;"> <!-- Fixed width for ID -->
                <col style="width: 20%;"> <!-- Name column -->
                <col style="width: 50%;"> <!-- Price column -->
                <col style="width: 20%;"> <!-- Button column -->
            </colgroup>
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Име</th>
                    <th scope="col">Описание</th>
                    <th scope="col">Бутони</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align: center; vertical-align: middle;">@item.Id</td>
                    <td style="text-align: left; vertical-align: middle;">@item.Name</td>
                    <td style="text-align: right; vertical-align: middle;">@item.Description</td>
                    <td style="text-align: center; vertical-align: middle; white-space: nowrap;">
                        <div class="btn-group" role="group">
                            <a asp-controller="Sport" asp-action="EditSport" asp-route-id="@item.Id" class="btn btn-primary">Редактирай</a>
                                <a asp-controller="Sport" asp-action="DeleteSport" asp-route-id="@item.Id" class="btn btn-primary">Изтрий</a>
                            <a asp-controller="Tournament" asp-action="SportTournaments" asp-route-id="@item.Id" class="btn btn-primary">Турнири</a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    <a asp-controller="Sport" asp-action="AddSport" class="btn btn-primary">Добави</a>
}