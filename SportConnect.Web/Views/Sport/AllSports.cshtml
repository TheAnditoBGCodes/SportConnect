                    <form method="post" class="d-flex justify-content-center">
                        <input id="sportSearch" class="form-control w-50" placeholder="Спорт" oninput="filterSports()" />
                    </form>
                </div>

                <!-- Row with centered cards -->
                <div class="row justify-content-center align-content-center" id="sportsList">
                    @for (int i = 1; i < 5; i++)
                    {@foreach (var item in Model)
                        {
                            <div id="sportItem" class="col-lg-4 col-md-6 col-12 mb-3 sport-item" style="transition: transform 0.3s ease;">
                                <div class="card" style="width: 100%; height: 100%;">
                                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="aspect-ratio: 4 / 3; object-fit: cover;">
