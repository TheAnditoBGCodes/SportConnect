                                            <a asp-controller="Tournament" asp-action="SportTournaments" asp-route-id="@item.Id" class="btn btn-primary btn-sm text-center">Турнири</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
