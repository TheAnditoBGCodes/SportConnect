@using SportConnect.Models
@model Sport

<div class="container-fluid d-flex justify-content-center align-items-center" style="height: 76vh; font-size: 0.8rem;">
    <div class="container p-2 border rounded" style="max-width: 55%; padding: 0.5rem;">
        <h1 class="text-center mb-3" style="font-size: 1.3rem;">Промени спорт</h1>
        <form method="post">
            <div class="row mb-3">
                <div class="col">
                    <div class="form-floating">
                        <input asp-for="Name" class="form-control" aria-required="true" placeholder="Име" style="font-size: 0.8rem;" />
                        <label asp-for="Name" style="font-size: 0.8rem;">Име</label>
                        <span asp-validation-for="Name" class="text-danger" style="font-size: 0.8rem;"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input asp-for="Description" class="form-control" aria-required="true" placeholder="Описание" style="font-size: 0.8rem;" />
                        <label asp-for="Description" style="font-size: 0.8rem;">Описание</label>
                        <span asp-validation-for="Description" class="text-danger" style="font-size: 0.8rem;"></span>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-3" style="font-size: 0.8rem;">
                <a asp-action="AllSports" asp-controller="Sport" class="btn btn-secondary" style="font-size: 0.8rem;">Назад</a>
                <button type="submit" class="btn btn-warning text-white d-flex justify-content-center align-items-center" style="font-size: 0.8rem;">
                    Промени
                </button>
            </div>
        </form>
    </div>
</div>
