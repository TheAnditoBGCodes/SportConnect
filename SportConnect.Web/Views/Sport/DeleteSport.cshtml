@using SportConnect.Web.Models
@model SportViewModel

<style>
    /* Modal adjustments */
    .modal-body {
        overflow: hidden;
    }

    /* Profile image styling */
    .profile-image {
        width: 100%;
        max-width: 500px; /* Increased max-width */
        aspect-ratio: 4 / 3;
        object-fit: cover;
    }

    /* Confirm input */
    .confirm-delete-input {
        max-width: 110px;
        height: 30.6px;
    }

    p {
        margin-bottom: 0px;
    }

    main.pb-3 {
        padding-bottom: 0px !important;
        min-height: 83vh;
        align-content: center;
    }

    /* Button Group */
    .delete-btn-group {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    /* Container for form centering */
    .container.text-center {
        display: flex;
        justify-content: center; /* Centers the form horizontally */
    }

    .delete-header {
        font-size: 24px; /* Increased header font size */
    }

    /* Margin adjustments for form elements */
    .mb-2 {
        margin-bottom: 20px;
    }
</style>

<div class="container text-center">
    <form method="post" class="delete-profile-form" style="width: 500px; justify-self: center;">
        <h2 class="delete-header">Изтрий спорт</h2>
        <!-- Profile Image -->
        <div class="mb-2">
            <img src="@Model.ImageUrl" class="profile-image" alt="@Model.Name">
        </div>

        <!-- User Info -->
        <div class="mb-2">
            <h3 class="fw-bold">@Model.Name</h3>
        </div>
        <!-- Confirm Delete and Action Buttons -->
        <div class="d-flex justify-content-between align-items-center gap-2 w-100">
            <a asp-action="AllSports" asp-controller="Sport" class="btn btn-secondary btn-sm">
                Назад
            </a>
            <div class="d-flex align-items-center gap-1">
                <span class="text-danger fw-bold">ПОТВЪРДИ ИЗТРИВАНЕ:</span>
                <input type="text" class="form-control text-center" id="confirmDelete" name="ConfirmText" placeholder="ПОТВЪРДИ" style="width: 110px;" required />
            </div>
            <button type="submit" class="btn btn-danger btn-sm">
                Изтрий
            </button>
        </div>
    </form>
</div>