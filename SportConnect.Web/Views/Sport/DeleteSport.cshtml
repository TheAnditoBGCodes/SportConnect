@using SportConnect.Web.Models
@model SportDeletionViewModel
<div class="container text-center" style="max-width: 55%;">
    <h1 class="text-center mb-3" style="font-size: 1.3rem;">Изтрий спорт</h1>
    <form method="post">
        <!-- Image centered and made bigger -->
        <div class="mb-3">
            <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name"
                 style="width: 80%; max-width: 500px; aspect-ratio: 4 / 3; object-fit: cover;">
        </div>

        <!-- Text below image -->
        <h3 class="fw-bold">@Model.Name</h3>
        <p>@Model.Description</p>

        <div class="d-flex justify-content-between align-items-center mt-3 gap-2">
            <a asp-action="AllSports" asp-controller="Sport" class="btn btn-secondary" style="font-size: 0.8rem; width: 120px;">Назад</a>

            <div class="d-flex align-items-center gap-1">
                <span class="text-danger fw-bold" style="font-size: 0.9rem;">ПОТВЪРДИ ИЗТРИВАНЕ:</span>
                <input type="text" class="form-control text-center" id="confirmDelete" name="ConfirmText"
                       placeholder="ПОТВЪРДИ" required
                       style="font-size: 0.8rem; width: 120px; height: 32px; padding: 2px 5px;" />
            </div>

            <button type="submit" class="btn btn-danger" style="font-size: 0.8rem; width: 120px;">Изтрий</button>
        </div>
    </form>
</div>
