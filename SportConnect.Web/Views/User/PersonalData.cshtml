@using SportConnect.Models
@model UserViewModel

<style>
    /* Scope styles to this specific view */
    .profile-delete-view {
        max-width: 50%; /* Increased the width of the form container */
        margin: 0 auto;
    }

        .profile-delete-view .form-row {
            display: flex;
            justify-content: space-between;
            width: 100%;
        }

        /* Profile image section */
        .profile-delete-view .col-md-3.text-center {
            padding-left: 0 !important;
            padding-right: 1rem !important;
        }

        .profile-delete-view .col-md-8.text-start.d-flex.flex-column {
            padding-left: 0 !important;
            padding-right: 0 !important;
        }

        /* Profile image container */
        .profile-delete-view .profile-image-container {
            width: 250px; /* Increased size of profile image container */
            height: 250px;
            overflow: hidden;
            display: flex;
            justify-content: flex-start;
            padding-left: 0;
        }

            .profile-delete-view .profile-image-container img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        /* User data section */
        .profile-delete-view .col-md-8 {
            flex: 1;
        }

        /* Adjust font sizes and spacing for a larger form */
        .profile-delete-view h2 {
            font-size: 2rem;
        }

        .profile-delete-view .col-md-8 p {
            font-size: 1rem;
        }

            .profile-delete-view .col-md-8 p.fw-bold {
                font-size: 1rem;
            }

        .profile-delete-view .form-row .d-flex.justify-content-between p {
            font-size: 1rem;
        }

        /* Button styles */
        .profile-delete-view .btn {
            font-size: 1rem;
            width: 90px;
        }

        .profile-delete-view .btn-secondary {
            width: 90px;
        }

        /* Customize input field */
        .profile-delete-view .form-control {
            font-size: 1rem;
            padding: 5px 10px;
            width: 110px;
        }

    .container main {
        min-height: 83vh !important;
        padding-bottom: 0px !important;
        align-content: center !important;
    }

    div.container.main.pb-3 {
        align-content: center;
        padding-bottom: 0px !important;
    }

    .container.text-center {
        align-content: center;
        padding-bottom: 0px !important;
    }

    p {
        margin-bottom: 0px !important;
        align-content: center !important;
        height: 40px !important;
    }

    .profile-delete-view .d-flex.align-items-center input {
        height: 38px;
    }

    .profile-delete-view .d-flex.align-items-center span {
        font-size: 1rem;
    }

    .d-flex.justify-content-between {
        align-content: center !important;
    }
</style>

<div class="container profile-delete-view">
    <form method="post">
        <h2 class="text-center justify-content-center">Моят профил</h2>

        <!-- Row 1: Username and Email -->
        <div class="row mb-2" style="display: none;">
            <div class="col-12 col-md-6">
                <div class="form-floating">
                    <input asp-for="@Model.Id" class="form-control form-control-sm" aria-required="true" placeholder="Вашето потребителско име" style="font-size: 1rem;" />
                    <label asp-for="@Model.Id" class="text-gray">Потребителско име</label>
                    <span asp-validation-for="@Model.Id" class="text-danger" style="font-size: 1rem;"></span>
                </div>
            </div>
        </div>

        <!-- Profile Image and User Data -->
        <div class="form-row d-flex mb-2 align-items-stretch">
            <!-- Profile Image Section (square container) -->
            <div class="text-center" style="width: 240px; height:240px; margin-right: 1rem;">
                <div class="profile-image-container" style="width: inherit; height:inherit;">
                    <img src="@Model.ProfileImage" alt="@Model.UserName" />
                </div>
            </div>

            <!-- User Details Section (taking up remaining space) -->
            <div class="col-md-8 text-start d-flex flex-column">
                <div class="d-flex justify-content-between">
                    <p class="fw-bold">Име</p>
                    <p>@Model.BothNames</p>
                </div>

                <div class="d-flex justify-content-between">
                    <p class="fw-bold">Потребителско име</p>
                    <p>@Model.UserName</p>
                </div>

                <div class="d-flex justify-content-between">
                    <p class="fw-bold">Имейл</p>
                    <p>@Model.Email</p>
                </div>

                <div class="d-flex justify-content-between">
                    <p class="fw-bold">Телефонен номер</p>
                    <p>@Model.PhoneNumber</p>
                </div>

                <div class="d-flex justify-content-between">
                    <p class="fw-bold">Дата на раждане</p>
                    <p>@Model.DateOfBirth</p>
                </div>

                <div class="d-flex justify-content-between">
                    <p class="fw-bold">Държава</p>
                    <p>@Model.Country</p>
                </div>
            </div>
        </div>

        <!-- Confirm Delete and Action Buttons -->
        <div class="d-flex justify-content-between align-items-center gap-2 w-100">
            <a asp-controller="User" asp-action="EditUser" asp-route-id="@Model.Id" asp-route-returnUrl="@Url.Action("PersonalData", "User")" class="btn btn-warning btn-sm text-white">
                Промени
            </a>
            <a asp-controller="User" asp-action="DeleteUser" asp-route-id="@Model.Id" asp-route-returnUrl="@Url.Action("PersonalData", "User")" class="btn btn-danger btn-sm">
                Изтрий
            </a>
        </div>
    </form>
</div>