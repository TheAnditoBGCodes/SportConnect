@using SportConnect.Models
@model SportConnectUserViewModel
@{
    <h1>update sport</h1>
    <form method="post">

        <div class="form-floating mb-3">
            <input readonly asp-for="@Model.UserName" class="form-control" aria-required="true" placeholder="user име" />
            <label asp-for="@Model.UserName">Име</label>
            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input readonly asp-for="@Model.FirstName" class="form-control" aria-required="true" placeholder="Вашето име" />
            <label asp-for="@Model.FirstName">Име</label>
            <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input readonly asp-for="@Model.LastName" class="form-control" aria-required="true" placeholder="Вашата фамилия" />
            <label asp-for="@Model.LastName">Фамилия</label>
            <span asp-validation-for="@Model.LastName" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input readonly type="number" asp-for="@Model.Age" class="form-control" aria-required="true" placeholder="Age" />
            <label asp-for="@Model.Age">Age</label>
            <span asp-validation-for="@Model.Age" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input readonly asp-for="@Model.Location" class="form-control" aria-required="true" placeholder="Location" />
            <label asp-for="@Model.Location">Location</label>
            <span asp-validation-for="@Model.Location" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input readonly asp-for="@Model.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <label asp-for="@Model.Email">Имейл</label>
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input readonly type="tel" asp-for="@Model.PhoneNumber" class="form-control" aria-required="true" placeholder="0888 123 456" />
            <label asp-for="@Model.PhoneNumber">Телефонен номер</label>
            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3" style="display: none;">
            <input readonly type="text" asp-for="@Model.PasswordHash" class="form-control" aria-required="true" placeholder="OrganizerId" />
            <label asp-for="@Model.PasswordHash">@Model.PasswordHash</label>
            <span asp-validation-for="@Model.PasswordHash" class="text-danger"></span>
        </div>
    </form>
    <a asp-controller="User" asp-action="EditUser" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-controller="User" asp-action="DeleteUser" asp-route-id="@Model.Id" class="btn btn-primary">Delete</a>
}