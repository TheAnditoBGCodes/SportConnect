@using SportConnect.Models
@model EditUserViewModel

<style>
    /* Modal adjustments */
    .modal-body {
        overflow: hidden;
    }

    /* Profile image styling */
    .profile-image {
        width: 100%;
        max-width: 350px; /* Matches form width */
        aspect-ratio: 1 / 1;
        object-fit: cover;
    }

    /* Confirm input */
    .confirm-delete-input {
        max-width: 110px;
        height: 30.6px;
    }

    p {
        margin-bottom: 0px;
    }

    main.pb-3 {
        padding-bottom: 0px !important;
        min-height: 83vh;
        align-content: center;
    }

    /* Form Centering */
    .delete-profile-form {
        width: 100%;
        max-width: 350px; /* Matches profile image width */
        justify-self: center;
    }

    /* Header */
    .delete-header {
        font-size: 24px; /* Increased header font size */
    }

    /* Margin adjustments */
    .mb-2 {
        margin-bottom: 20px;
    }

    /* Button alignment */
    .delete-btn-group {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
    }
</style>

<div class="container d-flex text-center justify-content-center">
    <form method="post" class="delete-profile-form text-center">
        <h2 class="delete-header">Изтрий профил</h2>

        <!-- Profile Image -->
        <div class="mb-2">
            <img src="@Model.ProfileImage" class="profile-image" alt="@Model.UserName">
        </div>

        <!-- User Info -->
        <div class="mb-2">
            <h3 class="fw-bold">@Model.FirstName @Model.LastName</h3>
            <p>@Model.UserName</p>
        </div>

        <div class="delete-btn-group mb-2 justify-content-center">
            <div class="d-flex align-items-center">
                <span class="text-danger fw-bold me-2">ПОТВЪРДИ ИЗТРИВАНЕ:</span>
                <input type="text" class="form-control text-center confirm-delete-input" id="confirmDelete" name="ConfirmText" placeholder="ПОТВЪРДИ" required />
            </div>
        </div> 
        
        <div class="delete-btn-group justify-content-between">
            <a href="@ViewBag.ReturnUrl" class="btn btn-secondary btn-sm">Назад</a>
            <button type="submit" class="btn btn-danger btn-sm">Изтрий</button>
        </div>
    </form>
</div>