@using SportConnect.Utility
<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        #main-header {
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
            background-color: white;
            border-bottom: 1px solid #ddd; /* Same border style as footer */
        }

        /* Ensure all text is 1rem */
        body, .navbar-nav .nav-link, .navbar-brand, .footer a, .footer, h1, h2, h3, h4, h5, h6, p {
            font-size: 1rem; /* Set text size to 1rem */
        }

        body {
            padding-top: 60px; /* Adjusted to prevent content from being hidden under the fixed header */
        }

        .navbar-nav .nav-link,
        .footer a,
        .footer {
            font-size: 1rem !important; /* Ensure consistency across navbar and footer */
        }

        .navbar-brand {
            align-content: center !important;
            font-size: 1.4rem !important; /* Ensure consistency across navbar and footer */
            font-weight: bolder;
        }
        /* Footer border matching header border */
        .footer {
            background-color: white;
            border-top: 1px solid #ddd; /* Same border style as header */
        }
    </style>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SportConnect.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SportConnect.Web.styles.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<body>
    <header id="main-header">
        <nav class="navbar navbar-expand-sm navbar-light bg-white">
            <div class="container-fluid d-flex align-items-center">
                <!-- SportConnect Brand -->
                <a class="navbar-brand me-2" asp-area="" asp-controller="Home" asp-action="Index">SportConnect</a>

                <!-- Navbar Toggle Button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation Links -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.IsInRole(SD.AdminRole))
                        {
                            <li class="nav-item d-flex align-content-center">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Sport" asp-action="AllSports">Спортове</a>
                            </li>
                            <li class="nav-item d-flex align-content-center">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Tournament" asp-action="AllTournaments">Турнири</a>
                            </li>
                            <li class="nav-item d-flex align-content-center">
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="AllUsers">Потребители</a>
                            </li>
                        }
                        else if (User.IsInRole(SD.UserRole))
                        {
                            <li class="nav-item d-flex align-content-center">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Sport" asp-action="AllSports">Спортове</a>
                            </li>
                            <li class="nav-item d-flex align-content-center">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Tournament" asp-action="AllTournaments">Турнири</a>
                            </li>
                            <li class="nav-item d-flex align-content-center">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Tournament" asp-action="MyTournaments">Мои турнири</a>
                            </li>
                            <li class="nav-item d-flex align-content-center">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Participation" asp-action="MyParticipations">Мои участия</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item d-flex align-content-center">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Sport" asp-action="AllSports">Спортове</a>
                            </li>
                            <li class="nav-item d-flex align-content-center">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Tournament" asp-action="AllTournaments">Турнири</a>
                            </li>
                        }
                    </ul>
                    <!-- Profile and Logout Section -->
                    <div class="d-flex align-content-center">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SportConnect
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>