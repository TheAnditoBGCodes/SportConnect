@using SportConnect.Web.Models
@model SportDeletionViewModel

@if (Model.Tournaments.Any())
{
    <div class="container-fluid d-flex justify-content-center align-items-center" style="height: 78vh; font-size: 0.9rem;">
        <div class="container p-2 border rounded" style="max-width:90%; padding: 0.5rem;">
            <h1 class="text-center mb-3" style="font-size: 1.3rem;">Данни за този спорт</h1>
            <form method="post">
                <div class="row mb-2">
                    <div class="col">
                        <div class="form-floating">
                            <input readonly asp-for="Name" class="form-control" aria-required="true" placeholder="Име..." style="font-size: 0.8rem;" />
                            <label asp-for="Name" style="font-size: 0.8rem;">Име</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            <input readonly asp-for="Description" class="form-control" aria-required="true" placeholder="Описание..." style="font-size: 0.8rem;" />
                            <label asp-for="Description" style="font-size: 0.8rem;">Описание</label>
                        </div>
                    </div>
                </div>
            </form>

            <h2 class="text-center" style="font-size: 1.1rem;">Турнири</h2>
            <div class="table-container flex-grow-1" style="overflow-y: auto; max-height: 370px;">
                <table class="table table-striped table-hover text-center align-middle" style="font-size: 0.8rem;">
                    <thead class="table-dark" style="position: sticky; top: 0; z-index: 2;">
                        <tr class="align-middle">
                            <th class="text-center">Име</th>
                            <th class="text-center">Описание</th>
                            <th class="text-center">Дата</th>
                            <th class="text-center">Краен срок</th>
                            <th class="text-center">Организатор</th>
                            <th class="text-center">Локация</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Tournaments)



                        {
                            <tr class="align-middle">
                                <td class="text-center">@item.Name</td>
                                <td class="text-truncate text-center" style="max-width: 150px;">@item.Description</td>
                                <td class="text-center">@item.Date</td>
                                <td class="text-center">@item.Deadline</td>
                                <td class="text-center">@item.Organizer.FullName</td>
                                <td class="text-center">@item.Location</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-center mt-2">
                <a asp-action="AllSportsAdmin" asp-controller="Sport" class="btn btn-secondary" style="font-size: 0.8rem;">Назад</a>
            </div>
        </div>
    </div>
}
else
{
    <div class="container-fluid d-flex justify-content-center align-items-center" style="height: 78vh; font-size: 0.9rem;">
        <div class="container p-2 border rounded" style="max-width:55%; padding: 0.5rem;">
            <h1 class="text-center mb-3" style="font-size: 1.3rem;">Данни за този спорт</h1>
            <form method="post">
                <div class="row mb-2">
                    <div class="col">
                        <div class="form-floating">
                            <input readonly asp-for="Name" class="form-control" aria-required="true" placeholder="Име..." style="font-size: 0.8rem;" />
                            <label asp-for="Name" style="font-size: 0.8rem;">Име</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            <input readonly asp-for="Description" class="form-control" aria-required="true" placeholder="Описание..." style="font-size: 0.8rem;" />
                            <label asp-for="Description" style="font-size: 0.8rem;">Описание</label>
                        </div>
                    </div>
                </div>
            </form>

            <h2 class="text-center" style="font-size: 1.1rem;">Няма турнири</h2>

            <div class="d-flex justify-content-center mt-2">
                <a asp-action="AllSportsAdmin" asp-controller="Sport" class="btn btn-secondary" style="font-size: 0.8rem;">Назад</a>
            </div>
        </div>
    </div>
}