@using SportConnect.Web.Models
@model SportDeletionViewModel

@if (Model.Tournaments != null && Model.Tournaments.Any())

{
    <!-- Centering Container (full page height) -->
    <div class="container-fluid d-flex justify-content-center align-items-center" style="height: 78vh; font-size: 1.2rem;">
        <!-- Adjusted container that will always be centered -->
        <div class="container p-3 border rounded shadow-lg" style="max-width: 80%; overflow: auto; padding: 1rem;">
            <!-- Centered Heading -->
            <h1 class="text-center" style="font-size: 2rem;">Данни за този спорт</h1>

            <form method="post">
                <!-- Sport Name -->
                <div class="form-floating mb-3">
                    <input readonly asp-for="@Model.Name" class="form-control" placeholder="Име" style="font-size: 1rem;" />
                    <label asp-for="@Model.Name" style="font-size: 1rem;">Име</label>
                    <span asp-validation-for="@Model.Name" class="text-danger" style="font-size: 1rem;"></span>
                </div>

                <!-- Sport Description -->
                <div class="form-floating mb-3">
                    <input readonly asp-for="@Model.Description" class="form-control" placeholder="Описание" style="font-size: 1rem;" />
                    <label asp-for="@Model.Description" style="font-size: 1rem;">Описание</label>
                    <span asp-validation-for="@Model.Description" class="text-danger" style="font-size: 1rem;"></span>
                </div>

                <h2 class="text-center" style="font-size: 1.5rem;">Турнири</h2>

                <!-- Tournament Table with Scrollable Container -->
                <div class="table-container" style="max-height: 240px; overflow-y: auto;">
                    <!-- Table with a max height and scroll if more than 5 entries -->
                    <table class="table table-striped table-hover text-center align-middle" style="font-size: 1rem;">
                        <thead class="table-dark">
                            <tr>
                                <th>#</th>
                                <th>Име</th>
                                <th>Описание</th>
                                <th>Дата</th>
                                <th>Краен срок</th>
                                <th>Организатор</th>
                                <th>Локация</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Tournaments)



                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td class="text-truncate" style="max-width: 200px;">@item.Description</td>
                                    <td>@item.Date</td>
                                    <td>@item.Deadline</td>
                                    <td>@item.Organizer.FullName</td>
                                    <td>@item.Location</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Buttons Row -->
                <div class="d-flex justify-content-center mt-3" style="font-size: 1rem;">
                    <!-- Smaller button font size -->
                    <a asp-action="AllSports" asp-controller="Sport" class="btn btn-secondary" style="font-size: 1rem;">Назад</a>
                </div>

            </form>
        </div>
    </div>

}

else

{
    <!-- Centering Parent Container (Full screen) -->
    <div class="d-flex justify-content-center align-items-center" style="height: 78vh;">
        <!-- Centering Container -->
        <div class="container d-flex justify-content-center align-items-center" style="font-size: 1.2rem; max-width: 70%; height: 50%; text-align: center;">
            <!-- Adjusted height and width -->
            <!-- Smaller font size for the whole container -->
            <!-- Container Box -->
            <div class="container p-3 border rounded shadow-lg" style="max-width: 80%; overflow: auto; padding: 1rem;">
                <!-- Smaller padding -->
                <!-- Centered Heading -->
                <h1 class="text-center" style="font-size: 2rem;">Данни за този спорт</h1> <!-- Adjusted heading font size -->

                <form method="post">
                    <!-- Sport Name -->
                    <div class="form-floating mb-3">
                        <input readonly asp-for="@Model.Name" class="form-control" placeholder="Име" style="font-size: 1rem;" />
                        <label asp-for="@Model.Name" style="font-size: 1rem;">Име</label>
                        <span asp-validation-for="@Model.Name" class="text-danger" style="font-size: 1rem;"></span>
                    </div>

                    <!-- Sport Description -->
                    <div class="form-floating mb-3">
                        <input readonly asp-for="@Model.Description" class="form-control" placeholder="Описание" style="font-size: 1rem;" />
                        <label asp-for="@Model.Description" style="font-size: 1rem;">Описание</label>
                        <span asp-validation-for="@Model.Description" class="text-danger" style="font-size: 1rem;"></span>
                    </div>

                    <h2 class="text-center" style="font-size: 1.5rem;">Няма турнири от този спорт</h2>

                    <!-- Buttons Row -->
                    <div class="d-flex justify-content-center mt-3" style="font-size: 1rem;">
                        <!-- Smaller button font size -->
                        <a asp-action="AllSports" asp-controller="Sport" class="btn btn-secondary" style="font-size: 1rem;">Назад</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
}
