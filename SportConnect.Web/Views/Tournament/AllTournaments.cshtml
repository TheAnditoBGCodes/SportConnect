@using SportConnect.Models
@model TournamentFilterViewModel


<!-- Centering Container (full page height) -->
@if (!Model.Tournaments.Any())
{
    <div class="container-fluid d-flex justify-content-center align-items-center" style="height: 78vh; font-size: 1.2rem;">
        <div class="container p-3 border rounded" style="max-width: 55%; overflow: auto; padding: 1rem;">
            <!-- No sports scenario -->
            <h1 class="text-center" style="font-size: 2rem;">Няма турнири</h1>

            <!-- Back button -->
            <div class="d-flex justify-content-center mt-3" style="font-size: 1rem;">
                <a asp-action="AddTournament" asp-controller="Tournament" class="btn btn-success" style="font-size: 1rem;">Добави</a>
            </div>
        </div>
    </div>
}
else
{
    <div class="container-fluid d-flex justify-content-center align-items-center" style="height: 78vh; font-size: 1.2rem;">
        <div class="container p-3 border rounded" style="max-width: 90%; overflow: auto; padding: 1rem;">
            <div class="mb-3">
                <form method="post" class="p-3 border rounded bg-light">
                    <h1 class="text-center" style="font-size: 2rem;">Търсене</h1>
                    <div class="row g-3 align-items-center">
                        <div class="col-md-6">
                            <label for="SportId" class="form-label">Спорт</label>
                            <select asp-for="SportId" asp-items="Model.Sports" class="form-control">
                                <option value="">Избери спорт</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="Date" class="form-label">Дата на провеждане</label>
                            <input type="date" asp-for="Date" class="form-control">
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="text-center mt-3">
                        <button type="submit" class="btn btn-primary px-4">Търси</button>
                    </div>
                </form>
            </div>

            <div class="d-flex flex-column" style="flex-grow: 1;">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h1 class="m-0" style="font-size: 2rem;">Всички турнири</h1>
                    <a asp-controller="Tournament" asp-action="AddTournament" class="btn btn-success" style="font-size: 1.2rem; padding: 0.75rem 1.5rem;">
                        Добави
                    </a>
                </div>

                <div class="table-container flex-grow-1 overflow-auto" style="min-height: auto; padding-bottom: 1rem;">
                    <table class="table table-striped table-hover text-center align-middle" style="font-size: 1rem;">
                        <thead class="table-dark" style="position: sticky; top: 0; z-index: 2;">
                            <tr>
                                <th>#</th>
                                <th>Име</th>
                                <th>Описание</th>
                                <th>Дата</th>
                                <th>Краен срок</th>
                                <th>Организатор</th>
                                <th>Локация</th>
                                <th>Спорт</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Tournaments)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td class="text-start">@item.Name</td>
                                    <td class="text-truncate" style="max-width: 200px;">@item.Description</td>
                                    <td>@item.Date</td>
                                    <td>@item.Deadline</td>
                                    <td>@item.Organizer.FullName</td>
                                    <td>@item.Location</td>
                                    <td>@item.Sport.Name</td>
                                    <td class="text-nowrap">
                                        <div class="btn-group">
                                            <a asp-controller="Tournament" asp-action="EditTournament" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="white" class="bi bi-pen-fill">
                                                    <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001" />
                                                </svg>
                                            </a>
                                            <a asp-controller="Tournament" asp-action="DeleteTournament" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="white" class="bi bi-trash-fill">
                                                    <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0" />
                                                </svg>
                                            </a>
                                            <a asp-controller="Tournament" asp-action="TournamentDetails" asp-route-id="@item.Id" class="btn btn-info btn-sm font-weight-bold">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="white" class="bi bi-info-circle">
                                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                                                    <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0" />
                                                </svg>
                                            </a>@if (Model.UserParticipations.Any(p => p.TournamentId == item.Id && p.ParticipantId == Model.UserId))
                                            {
                                                <a asp-controller="Participation" asp-action="DeleteParticipationTournament" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                                    Откажи се
                                                </a>
                                            }
                                            else
                                            {
                                                <a asp-controller="Participation" asp-action="AddParticipation" asp-route-id="@item.Id" class="btn btn-success btn-sm">
                                                    Участвай
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

} 