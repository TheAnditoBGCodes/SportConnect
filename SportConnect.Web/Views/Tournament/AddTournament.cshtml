@using SportConnect.Models
@model TournamentViewModel
    <h1>Създай турнир</h1>
    <form method="post">
        <div class="form-floating mb-3">
            <input asp-for="Name" class="form-control" aria-required="true" placeholder="Име..." />
            <label asp-for="Name">Име</label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Description" class="form-control" aria-required="true" placeholder="Описание..." />
            <label asp-for="Description">Описание</label>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input type="datetime-local" asp-for="Date" class="form-control" aria-required="true" />
            <label asp-for="Date">Дата на провеждане</label>
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input type="datetime-local" date-time-validation="" asp-for="Deadline" class="form-control" aria-required="true" />
            <label asp-for="Deadline">Краен срок</label>
            <span asp-validation-for="Deadline" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input type="text" asp-for="Location" class="form-control" aria-required="true" placeholder="Локация..." />
        <label asp-for="Location">Локация</label>
        <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <select asp-for="SportId" class="form-select" asp-items="Model.Sports">
                <option disabled selected>Избери спорт</option>
            </select>
            <span asp-validation-for="SportId" class="text-danger"></span>
        </div>

        <input type="submit" class="btn btn-primary" value="Добави" />
</form>
<a asp-action="AllTournaments" class="btn btn-primary" asp-asp-controller="Tournament">Назад</a>